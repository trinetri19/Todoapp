<% if(success && success.length){%>
    <div class="alert mt-2 alert-dismissible fade show col-6 offset-2  offset-sm-2 offset-md-3 offset-lg-4" role="alert" > <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<%}%>

<% if(error && error.length){%>
    <div class="alert alert-danger mt-2 alert-dismissible fade show col-6 offset-2  offset-sm-2 offset-md-3 offset-lg-4" role="alert" > <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<%}%>